<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DiscoverGithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/octocat_main_color</item>
        <item name="colorPrimaryVariant">@color/octocat_second_color</item>
        <item name="colorOnPrimary">@color/octocat_tentacle_suction</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Custom_SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimatedIcon">@drawable/github_octocat_logo_vector_png_octodex_api_octodex_json_at_master_cocoaheads_miami_octodex_288x288</item>
        <item name="windowSplashScreenBackground">@color/octocat_main_color</item>
        <item name="postSplashScreenTheme">@style/Theme.DiscoverGithubUser</item>
    </style>
</resources>